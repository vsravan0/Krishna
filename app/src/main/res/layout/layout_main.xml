<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:visibility="gone"
        android:padding="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@color/purple_200"
        android:textStyle="bold"
        android:text="Welcome TO Android" />

    <EditText
        android:visibility="gone"
        android:id="@+id/id_et_unm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"/>


    <EditText
        android:visibility="gone"
        android:id="@+id/id_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password "/>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RadioButton
        android:layout_width="wrap_content"
        android:text="Male"
        android:layout_height="wrap_content"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:text="FeMale"
        android:layout_height="wrap_content"/>
    </RadioGroup>


    <Spinner
        android:id="@+id/id_spinner_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/countries"
        />

    <TextView
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_200"
        android:text="By Krishna"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/id_btn_signin"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Login"/>
    <Button
        android:visibility="gone"
        android:id="@+id/id_btn_signup"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SignUp"/>


    <Button
        android:id="@+id/id_btn_reset"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reset"/>

<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:id="@+id/id_recycleView"
    android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>